---
import { getCollection } from 'astro:content';
import Layout from '../components/layout.jsx';
import Seo from '../components/seo.astro';
import '../sass/recipe.scss';
import { MDLink } from '../components/links.jsx';
import { ToDateString } from '../components/factories.jsx';

export const prerender = true;
export async function getStaticPaths() {
  const entries = await getCollection('recipes');
  return entries.map(entry => ({
    params: { recipe: entry.slug },
    props: { entry },
  }));
}
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<head>
  <Seo title={entry.data.title} description={entry.data.description} />
</head>
<Layout currPage={'recipes'} customPages={[{ name: 'recipes', url: '/recipes' }]} client:idle>
  <h1 class="recipe-title">{entry.data.title}</h1>
  <Content components={{ a: MDLink }} />
</Layout>
