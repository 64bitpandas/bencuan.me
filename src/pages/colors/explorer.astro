const colorBooks = [
  anpaColor,
  dicColorGuide,
  focoltone,
  hksEProcess,
  hksE,
  hksKProcess,
  hksK,
  hksNProcess,
  hksN,
  hksZProcess,
  hksZ,
  pantoneFHCotton,
  pantoneFHNylon,
  pantoneFHI,
  pantoneGoeCoated,
  pantoneGoeUncoated,
  pantoneGoeBridge,
  pantoneSkinTone,
  pantonePlusCMYKCoated,
  pantonePlusCMYKUncoated,
  pantonePlusBridgeCoated,
  pantonePlusBridgeUncoated,
  pantonePlusExtended,
  pantonePlusMetallics,
  pantonePlusPastelsCoated,
  pantonePlusPastelsUncoated,
  pantonePlusPremium,
  pantonePlusSolidCoated,
  pantonePlusSolidUncoated,
  toyo94,
  toyoColorFinder,
  trumatch,
