---

<Layout currPage="projects" title="bencuan's projects" description="i make things">
  <!-- <div class="container"> -->
  <h1 class="blog-title">project status</h1>
  {
    activeProjects.map(proj => (
      <div class="proj-container">
        <div class="proj-sidebar">
          <div class="center-desktop">
            {statuses.map(status => (
              <div class={`proj-status ${status === proj.status ? `curr-status status-${proj.status}` : ''}`}>
                {status}
              </div>
            ))}
          </div>
        </div>
        <div class="proj-content">
          <XLink href={proj.link} label={proj.name} className="link proj-link">
            {proj.name}
          </XLink>
          <p>
            {proj.description.map(line => (
              <>
                {line}
                <br />
              </>
            ))}
          </p>
        </div>
      </div>
    ))
  }

  <h2>completed projects</h2>
  {
    completedProjects.map(proj => (
      <div class="completed-project">
        <XLink href={proj.link} label={proj.name} className="link proj-link">
          {proj.name}
        </XLink>
        <p>{proj.description}</p>
      </div>
    ))
