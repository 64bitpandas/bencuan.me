    text-align: center;
  }

  .color-name {
    font-size: 0.85rem;
    font-weight: 500;
    display: block;
    margin-bottom: 0.25rem;
    color: #29282d;
  }

  .color-hex {
    font-size: 0.75rem;
    color: #505457;
  }

