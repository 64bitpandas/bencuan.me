---
import '../sass/color_app.scss';

interface Props {
  title: string;
  currentPage: 'palettes' | 'explorer' | 'about';
  headerBg?: string;
  headerText?: string;
}

const { title, currentPage, headerBg = '#1E66F5', headerText = '#ffffff' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
    <title>{title} | colors | bencuan.me</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body class="color-app">
    <header class="color-app-header" id="color-header" style={`background-color: ${headerBg}; color: ${headerText};`}>
      <div class="header-content">
        <a href="/colors" class="header-title">colors</a>
        <nav class="header-nav">
          <a href="/colors" class:list={[{ active: currentPage === 'palettes' }]}>palettes</a>
          <a href="/colors/explorer" class:list={[{ active: currentPage === 'explorer' }]}>explorer</a>
          <a href="/colors/about" class:list={[{ active: currentPage === 'about' }]}>about</a>
        </nav>
      </div>
    </header>

    <main class="color-app-main">
      <slot />
    </main>

    <footer class="color-app-footer">
      <div class="footer-content">
        <img src="/favicon.png" alt="Kevin the Dinosaur" />
        <a href="https://bencuan.me">back to bencuan.me</a>
      </div>
    </footer>
  </body>
</html>

