    .explorer-layout {
      grid-template-columns: 1fr;
    }

    .favorites-panel {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      border-radius: 16px 16px 0 0;
      max-height: 40vh;
      overflow-y: auto;
    }
  }
</style>

<script>
  // Favorites functionality
  const favorites: Array<{ hex: string; name: string }> = JSON.parse(localStorage.getItem('colorFavorites') || '[]');

  function renderFavorites() {
    const list = document.getElementById('favorites-list');
    if (!list) return;

    if (favorites.length === 0) {
      list.innerHTML = '<p class="favorites-empty">Click the star on any color to add it here!</p>';
      return;
    }

    list.innerHTML = favorites
      .map(
        fav => `
      <div class="favorite-item" data-hex="${fav.hex}">
        <div class="favorite-swatch" style="background-color: ${fav.hex};"></div>
        <div class="favorite-info">
          <span class="favorite-name">${fav.name}</span>
          <span class="favorite-hex mono">${fav.hex}</span>
        </div>
        <button class="remove-favorite" data-hex="${fav.hex}" title="Remove">Ã—</button>
      </div>
    `,
      )
      .join('');

    // Add click handlers for copying
    list.querySelectorAll('.favorite-item').forEach(item => {
      item.addEventListener('click', e => {
        if ((e.target as HTMLElement).classList.contains('remove-favorite')) return;
        const hex = item.getAttribute('data-hex');
        if (hex) {
          navigator.clipboard.writeText(hex);
          showToast(`Copied ${hex}`);
        }
      });
    });

    // Add remove handlers
    list.querySelectorAll('.remove-favorite').forEach(btn => {
      btn.addEventListener('click', e => {
        e.stopPropagation();
        const hex = btn.getAttribute('data-hex');
        const idx = favorites.findIndex(f => f.hex === hex);
        if (idx > -1) {
          favorites.splice(idx, 1);
          localStorage.setItem('colorFavorites', JSON.stringify(favorites));
          renderFavorites();
          updateFavoriteButtons();
        }
      });
    });
  }

  function updateFavoriteButtons() {
    document.querySelectorAll('.favorite-btn').forEach(btn => {
      const hex = btn.getAttribute('data-hex');
      const isFav = favorites.some(f => f.hex === hex);
      btn.classList.toggle('active', isFav);
    });
  }

  function showToast(message: string) {
    const toast = document.getElementById('copy-toast');
    if (toast) {
      toast.textContent = message;
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 2000);
    }
  }

  // Initialize
  renderFavorites();
  updateFavoriteButtons();

  // Favorite button handlers
  document.querySelectorAll('.favorite-btn').forEach(btn => {
    btn.addEventListener('click', e => {
      e.stopPropagation();
      const hex = btn.getAttribute('data-hex');
      const name = btn.getAttribute('data-name');
      if (!hex || !name) return;

      const idx = favorites.findIndex(f => f.hex === hex);
      if (idx > -1) {
        favorites.splice(idx, 1);
      } else {
        favorites.push({ hex, name });
      }

      localStorage.setItem('colorFavorites', JSON.stringify(favorites));
      renderFavorites();
      updateFavoriteButtons();
    });
  });

  // Card click to copy
  document.querySelectorAll('.color-card').forEach(card => {
    card.addEventListener('click', e => {
      if ((e.target as HTMLElement).closest('.favorite-btn')) return;
      const hex = card.getAttribute('data-hex');
      if (hex) {
        navigator.clipboard.writeText(hex);
        showToast(`Copied ${hex}`);
      }
    });
  });
</script>
