---
import ColorLayout from '../../components/color-app/ColorLayout.astro';
import { labToHex, isLightColor } from '../../components/color-app/colorUtils';
import fs from 'node:fs';
import path from 'node:path';

// Get list of color books
const colorBooksDir = path.join(process.cwd(), 'src/color-books');
const files = fs.readdirSync(colorBooksDir);
const colorBooks = files
  .filter(f => f.endsWith('.json') && !f.startsWith('_'))
  .map(f => f.replace('.json', ''))
  .sort();

// Default to PANTONE+ Solid Coated
const selectedBook = Astro.url.searchParams.get('book') || 'PANTONE+ Solid Coated';
const searchQuery = Astro.url.searchParams.get('q') || '';

// Load the selected color book
let colors: Array<{ name: string; hex: string; lab: number[] }> = [];
try {
  const bookPath = path.join(colorBooksDir, `${selectedBook}.json`);
  const bookData = JSON.parse(fs.readFileSync(bookPath, 'utf-8'));

  colors = Object.values(bookData.records).map((record: any) => {
    const [l, a, b] = record.components;
    return {
      name: record.name,
      hex: labToHex(l, a, b),
      lab: record.components,
    };
  });

  // Filter by search query
  if (searchQuery) {
    const query = searchQuery.toLowerCase();
    colors = colors.filter(c => c.name.toLowerCase().includes(query));
  }
} catch (e) {
  console.error('Error loading color book:', e);
}
---

<ColorLayout title="Explorer | Ben's Colors" description="Explore Pantone and other color books" currentPage="explorer">
  <div class="explorer-layout">
    <div class="explorer-main">
      <div class="explorer-controls">
        <form class="controls-form" method="get">
          <select name="book" class="book-select" id="book-select">
            {
              colorBooks.map(book => (
                <option value={book} selected={book === selectedBook}>
                  {book}
                </option>
              ))
            }
          </select>
          <input type="text" name="q" placeholder="Search colors..." value={searchQuery} class="search-input" />
          <button type="submit" class="search-btn">Search</button>
        </form>
        <p class="color-count">{colors.length} colors</p>
      </div>

      <div class="colors-grid">
        {
          colors.map(color => (
            <div class="color-card" data-hex={color.hex} data-name={color.name}>
              <div class="card-swatch" style={`background-color: ${color.hex};`}>
                <button class="favorite-btn" data-hex={color.hex} data-name={color.name} title="Add to favorites">
                  <svg class="star-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                  </svg>
                </button>
              </div>
              <div class="card-info">
                <span class="color-name">{color.name.replace('PANTONE ', '').replace('TOYO ', '')}</span>
                <span class="color-hex mono">{color.hex}</span>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <aside class="favorites-panel">
      <div class="favorites-header">
        <svg class="star-icon filled" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2">
          <polygon
            points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
          ></polygon>
        </svg>
        <span>favorites</span>
      </div>
      <div class="favorites-list" id="favorites-list">
        <p class="favorites-empty">Click the star on any color to add it here!</p>
      </div>
    </aside>
  </div>

  <div class="toast" id="copy-toast">Copied!</div>
</ColorLayout>

<style lang="scss">
  .explorer-layout {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 2rem;
  }

  .explorer-main {
    min-width: 0;
  }

  .explorer-controls {
    margin-bottom: 1.5rem;
  }

