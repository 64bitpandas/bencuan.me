    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
  }

  .book-select {
    padding: 0.75rem 1rem;
    border: 1px solid #cdd4cb;
    border-radius: 8px;
    font-size: 0.95rem;
    background: white;
    min-width: 250px;
  }

  .search-input {
    padding: 0.75rem 1rem;
    border: 1px solid #cdd4cb;
    border-radius: 8px;
    font-size: 0.95rem;
    flex: 1;
    min-width: 200px;
  }

  .search-btn {
    padding: 0.75rem 1.5rem;
    background: #1e66f5;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.95rem;
    cursor: pointer;
    transition: background 0.2s;

    &:hover {
      background: darken(#1e66f5, 10%);
    }
  }

  .color-count {
    font-size: 0.9rem;
    color: #505457;
  }

  .colors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 1rem;
  }

  .color-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    transition:
      transform 0.2s,
      box-shadow 0.2s;

    &:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }
  }

  .card-swatch {
    aspect-ratio: 1;
    position: relative;
  }

  .favorite-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    opacity: 0;
    transition:
      opacity 0.2s,
      background 0.2s;

    .star-icon {
      width: 18px;
      height: 18px;
      color: #505457;
    }

    &:hover {
      background: white;
    }

    &.active .star-icon {
      fill: #f5a623;
      color: #f5a623;
